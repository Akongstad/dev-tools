[
  {
    "context": "Workspace",
    "bindings": {
      "": "project_symbols::Toggle",
      "ctrl-t": "workspace::ToggleRightDock",
      "ctrl-b": "workspace::ToggleLeftDock",
      //"ctrl-b": "project_panel::ToggleFocus",
      "ctrl-1": ["workspace::ActivatePane", 0],
      "ctrl-shift-d": "diagnostics::Deploy",
      "ctrl-shift-9": "tab_switcher::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-space": "editor::ShowEditPrediction",
      "ctrl-t": ["terminal_panel::ToggleFocus", "workspace::ToggleRightDock"],
      "ctrl-b": ["project_panel::ToggleFocus", "workspace::ToggleLeftDock"],
      "ctrl-alt-l": "editor::Format",
      "ctrl-i": ["editor::Hover", "editor::ShowSignatureHelp"],
      "ctrl-shift-,": "tab_switcher::Toggle",
      "ctrl-/": ["editor::ToggleComments", { "advance_downwards": false }],
      "ctrl-alt-i": ["buffer_search::Deploy", { "selection_search_enabled": true }]
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-t": "workspace::ToggleRightDock",
      "ctrl-b": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-t": "terminal_panel::ToggleFocus",
      "ctrl-b": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-1": ["pane::ActivateItem", 0],
      "ctrl-2": ["pane::ActivateItem", 1],
      "ctrl-3": ["pane::ActivateItem", 2],
      "ctrl-4": ["pane::ActivateItem", 3],
      "ctrl-5": ["pane::ActivateItem", 4],
      "ctrl-6": ["pane::ActivateItem", 5],
      "ctrl-7": ["pane::ActivateItem", 6],
      "ctrl-8": ["pane::ActivateItem", 7],
      "ctrl-9": ["pane::ActivateItem", 8],
      "ctrl-0": "pane::ActivateLastItem",
      "ctrl--": "pane::GoBack",
      "ctrl-shift-right": "pane::GoForward",
      "ctrl-shift-t": "pane::ReopenClosedItem",
      "ctrl-shift-f": "project_search::ToggleFocus"
    }
  },

  //LINUX section:
  // MARK/SELECT FROM CURSOR
  {
    "context": "Editor && !ExcludedFromTextEditing",
    "bindings": {
      "ctrl-right": "editor::MoveToEndOfLine",
      "ctrl-left": "editor::MoveToBeginningOfLine",
      //Do the same but if shift. Highlight
      "ctrl-shift-left": "editor::SelectToBeginningOfLine",
      "ctrl-shift-right": "editor::SelectToEndOfLine",
      "ctrl-backspace": "editor::DeleteToBeginningOfLine",

      "alt-shift-down": "editor::DuplicateLineDown",
      "alt-shift-up": "editor::DuplicateLineUp",

      "alt-left": "editor::MoveToPreviousWordStart",
      "alt-shift-left": "editor::SelectToPreviousWordStart",
      "alt-right": "editor::MoveToNextWordEnd",
      "alt-shift-right": "editor::SelectToNextWordEnd",
      "alt-backspace": "editor::DeleteToPreviousWordStart"

      //Still missing some {}
    }
  }
]
